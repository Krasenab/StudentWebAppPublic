          /*tour-guide-card-style-strart here*/

          .tour-card {

              background: #ffffff;
              width: 300px;
              border: 1px solid #dddddd;
              border-radius: 8px;
              overflow: hidden;
              box-shadow: 0 2px 5px rgba(0,0,0,0.1);

          }

          .tour-image img {
              width: 100%;
              height: 200px;
              object-fit: cover;
          }

          .tour-info {
              padding: 15px;
              text-align: left;
          }

          .tour-title {
              font-size: 1.2em;
              color: #333;
              margin: 0;
          }

          .tour-price {
              background: #17a2b8;
              color: #ffffff;
              padding: 5px 10px;
              float: right;
              font-weight: bold;
              border-radius: 8px;
          }

          .tour-description {
              font-size: 0.9em;
              color: #666;
              line-height: 1.6;
              margin: 10px 0;
          }

          .tour-rating {
              color: #f5c518;
          }

          .clearfix::after {
              content: "";
              clear: both;
              display: table;
          }

          .button-ujarak {
              background: #01b3a7;
              color: #ffffff;
              text-align: center;
              padding: 10px;
              text-decoration: none;
              display: block;
              border-radius: 8px;
              margin: 10px 0;
              position: relative;
              overflow: hidden;
              transition: color 0.3s ease, background-color 0.3s ease;
              z-index: 1;
          }

              .button-ujarak::before {
                  content: '';
                  position: absolute;
                  top: 0;
                  left: 0;
                  width: 100%;
                  height: 100%;
                  background: #ffffff;
                  z-index: -1;
                  transform: scale3d(0.7, 1, 1);
                  transition: transform 0.3s ease, opacity 0.3s ease;
                  opacity: 0;
                  border-radius: 8px;
              }

              .button-ujarak:hover, .button-ujarak:focus {
                  color: black;
                  background: transparent;
                  border: 1px solid black;
              }

                  .button-ujarak:hover::before, .button-ujarak:focus::before {
                      opacity: 1;
                      transform: scale3d(1, 1, 1);
                  }




          .button-black-outlines {
              position:relative;
              margin: 10px 0;
              border-radius: 8px;
              padding: 10px;
              text-align: center;
              text-decoration: none;
              background: white;
              color: black;
              overflow: hidden;
              display: block;
              border: 1px solid black;
              z-index:1;
          }

              .button-black-outlines::before {
                  content: '';
                  position: absolute;
                  top: 0;
                  left: 0;
                  width: 100%;
                  height: 100%;
                  z-index: -1;
                  transform: scale3d(0.7,1 , 1);
                  transition: transform 0.3s ease, opacity 0.3s ease;
                  opacity: 0;
                  background: #01b3a7;
              }

              .button-black-outlines:hover{
                  background: transparent;
                  border:none;
                  color:white;

              }

              .button-black-outlines:hover::before, .button-black-outlines:focus::before {
                  opacity:1;
                  transform:scale3d(1,1,1);
              }

          /*tour-guide-card-style-end here*/



    </style>
</head>

