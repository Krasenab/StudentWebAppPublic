<script>
    document.addEventListener('DOMContentLoaded', () => {
        const observerOptions = {
            root: null, // наблюдава относително към viewport
            rootMargin: '0px',
            threshold: 0.1 // 1.0 означава, че анимацията ще стартира, когато 100% от елемента е видим

        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    // Ако елементът влезе във видимата област, добавя анимационни класове
                    entry.target.classList.add('animate__animated', 'animate__backInLeft', 'animation_delay:2s');
                    // След като елементът е анимиран, спираме наблюдението върху него
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Добавя всички елементи .tour-card, които искаш да наблюдаваш
        document.querySelectorAll('.tour-card').forEach((element) => {
            observer.observe(element);
        });

    });
</script>









